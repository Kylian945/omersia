        "label": "Erreur (texte)",
        "type": "color",
        "default": "#ef4444",
        "description": "Badge \"Indisponible\""
      },
      "error_bg": {
        "label": "Erreur (fond)",
        "type": "color",
        "default": "#fee2e2",
        "description": "Fond badge erreur"
      },
      "promo_bg": {
        "label": "Promo (fond)",
        "type": "color",
        "default": "#fbbf24",
        "description": "Badge promotion"
      },
      "promo_text": {
        "label": "Promo (texte)",
        "type": "color",
        "default": "#92400e",
        "description": "Texte promotion"
      },
      "variant_badge_bg": {
        "label": "Badge variante (fond)",
        "type": "color",
        "default": "#ffffff",
        "description": "Fond sélecteurs de variantes"
      },
      "variant_badge_text": {
        "label": "Badge variante (texte)",
        "type": "color",
        "default": "#374151",
