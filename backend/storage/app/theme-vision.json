        "label": "Arrondi des bordures",
        "type": "select",
        "default": "12px",
        "options": {
          "0px": "Aucun",
          "8px": "Petit",
          "12px": "Moyen",
          "16px": "Grand",
          "24px": "Très grand"
        }
      },
      "card_style": {
        "label": "Style des cartes produit",
        "type": "select",
        "default": "bordered",
        "options": {
          "minimal": "Minimal",
          "bordered": "Bordure",
          "shadowed": "Ombre",
          "elevated": "Élevé"
        }
      }
    },
    "header": {
