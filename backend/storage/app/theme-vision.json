        "label": "Style des cartes produit",
        "type": "select",
        "default": "bordered",
        "options": {
          "minimal": "Minimal (sans bordure)",
          "bordered": "Avec bordure",
          "shadow": "Avec ombre",
          "elevated": "Élevé (ombre forte)"
