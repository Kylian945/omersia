        "default": "48",
        "min": 32,
        "max": 72,
        "description": "Titre principal"
      },
      "h2_size": {
        "label": "Taille H2 (px)",
        "type": "number",
        "default": "36",
        "min": 24,
        "max": 56,
        "description": "Titre de section"
      },
      "h3_size": {
        "label": "Taille H3 (px)",
        "type": "number",
        "default": "28",
        "min": 20,
        "max": 44,
        "description": "Sous-titre"
      },
      "h4_size": {
        "label": "Taille H4 (px)",
        "type": "number",
        "default": "22",
        "min": 16,
        "max": 32,
        "description": "Titre de carte"
      },
      "h5_size": {
        "label": "Taille H5 (px)",
        "type": "number",
        "default": "18",
        "min": 14,
        "max": 26,
        "description": "Petit titre"
      },
      "h6_size": {
        "label": "Taille H6 (px)",
        "type": "number",
        "default": "16",
        "min": 12,
        "max": 22,
        "description": "Label / légende"
      },
      "body_size": {
        "label": "Taille du texte (px)",
        "type": "number",
        "default": "16",
        "min": 14,
        "max": 18
      }
