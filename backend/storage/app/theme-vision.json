        "description": "Apparence des cartes produit"
      },
      "product_hover_effect": {
        "label": "Effet au survol produit",
        "type": "select",
        "default": "lift",
        "options": {
          "none": "Aucun",
          "scale": "Agrandissement",
          "lift": "Élévation",
          "shadow": "Ombre renforcée"
        },
        "description": "Animation lors du survol d'une carte produit"
