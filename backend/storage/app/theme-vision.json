      "show_product_badges": {
        "label": "Afficher les badges produit",
        "type": "select",
        "default": "yes",
        "options": {
          "yes": "Oui",
          "no": "Non"
        },
        "description": "Badges 'Nouveau', 'Promo', 'Épuisé'"
      },
      "show_quick_add": {
        "label": "Bouton 'Ajout rapide'",
        "type": "select",
        "default": "yes",
        "options": {
          "yes": "Oui",
          "no": "Non"
        },
        "description": "Afficher le bouton d'ajout au panier sur les cartes"
      },
      "product_image_ratio": {
        "label": "Ratio image produit",
        "type": "select",
        "default": "square",
        "options": {
          "square": "Carré (1:1)",
          "portrait": "Portrait (3:4)",
          "landscape": "Paysage (4:3)"
        },
        "description": "Format des images produit"
      },
      "products_per_row_desktop": {
        "label": "Produits par ligne (desktop)",
        "type": "number",
        "default": "4",
        "min": 2,
        "max": 6,
        "description": "Nombre de produits par ligne sur grand écran"
      },
      "products_per_row_tablet": {
        "label": "Produits par ligne (tablette)",
        "type": "number",
        "default": "3",
        "min": 2,
        "max": 4,
        "description": "Nombre de produits par ligne sur tablette"
      },
      "products_per_row_mobile": {
        "label": "Produits par ligne (mobile)",
        "type": "number",
        "default": "2",
        "min": 1,
        "max": 2,
        "description": "Nombre de produits par ligne sur mobile"
      }
