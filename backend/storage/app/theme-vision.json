      "header_sticky": {
        "label": "Header fixe au scroll",
        "type": "select",
        "default": "yes",
        "options": {
          "yes": "Oui",
          "no": "Non"
        },
        "description": "Le header reste visible lors du défilement"
      }
    },
    "buttons": {
      "button_style": {
        "label": "Style des boutons",
        "type": "select",
        "default": "rounded",
        "options": {
          "square": "Carré",
          "rounded": "Arrondi",
          "pill": "Pilule"
