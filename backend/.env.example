# ========================================
# BACKEND - ENVIRONNEMENT LOCAL (Docker)
# Tout en Docker : MySQL, Meilisearch, Mailpit
# Usage: make install && make dev
# ========================================

APP_NAME=Omersia
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database MySQL (Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=omersia
DB_USERNAME=omersia
DB_PASSWORD=secret

# Cache & Session
BROADCAST_DRIVER=pusher
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Realtime (Laravel Reverb + Pusher protocol)
PUSHER_APP_ID=omersia
PUSHER_APP_KEY=omersia-key
PUSHER_APP_SECRET=omersia-secret
PUSHER_APP_CLUSTER=mt1
PUSHER_HOST=127.0.0.1
PUSHER_PORT=8080
PUSHER_SCHEME=http

REVERB_APP_ID=${PUSHER_APP_ID}
REVERB_APP_KEY=${PUSHER_APP_KEY}
REVERB_APP_SECRET=${PUSHER_APP_SECRET}
REVERB_HOST=${PUSHER_HOST}
REVERB_PORT=${PUSHER_PORT}
REVERB_SCHEME=${PUSHER_SCHEME}
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# Meilisearch (Docker)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey
MEILI_MASTER_KEY=masterKey

# Mail (Mailpit Docker)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no_reply@your_domain.dev"
MAIL_FROM_NAME="${APP_NAME}"

# Frontend
FRONTEND_URL=http://localhost:8000

# API Keys
FRONT_API_KEY=CHANGE_ME_IN_PRODUCTION

# Stripe
STRIPE_SECRET=CHANGE_ME_sk_test_or_live_stripe_key
STRIPE_WEBHOOK_SECRET=CHANGE_ME_whsec_webhook_secret
STRIPE_CURRENCY=eur
STRIPE_MODE=test
