# ========================================
# BACKEND - ENVIRONNEMENT LOCAL (Docker)
# Tout en Docker : MySQL, Meilisearch, Mailpit
# Usage: make install && make dev
# ========================================

APP_NAME=Omersia
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database MySQL (Docker)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=${DB_DATABASE:-omersia}
DB_USERNAME=${DB_USERNAME:-omersia}
DB_PASSWORD=${DB_PASSWORD:-secret}

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Meilisearch (Docker)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey
MEILI_MASTER_KEY=masterKey

# Mail (Mailpit Docker)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@omersia.dev"
MAIL_FROM_NAME="${APP_NAME}"

# Frontend
FRONTEND_URL=http://localhost:8000

# API Keys
FRONT_API_KEY=dev_api_key_change_in_production

# Stripe (test mode)
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=eur
STRIPE_MODE=test
