{
  "name": "storefront",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern='(css-.*|html-sanitizer)\\.test\\.(ts|tsx)$'",
    "test:components": "jest --testPathPattern='components/.*/__tests__/.*\\.test\\.(ts|tsx)$'",
    "test:lib": "jest src/lib/__tests__ --testPathIgnorePatterns='(css-.*|html-sanitizer)\\.test' --passWithNoTests",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:e2e": "playwright test",
    "test:e2e:security": "playwright test --project=security",
    "test:e2e:theme": "playwright test --project=theme",
    "test:e2e:ci": "playwright test --project=all-browsers",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:ci && npm run test:e2e",
    "test:report": "node scripts/test-report.js"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^5.6.0",
    "@stripe/stripe-js": "^8.7.0",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "isomorphic-dompurify": "^2.35.0",
    "laravel-echo": "^2.3.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "pusher-js": "^8.4.0",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "msw": "^2.12.9",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
